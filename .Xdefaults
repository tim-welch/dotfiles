! -----------------------------------------------------------------------------
! Retro groove colorscheme generalized
! Source: https://github.com/morhetz/gruvbox-generalized
! -----------------------------------------------------------------------------

! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

! -----------------------------------------------------------------------------
! Font configuration
! -----------------------------------------------------------------------------

XTerm*renderFont: true
!XTerm*faceName: xft:DejaVu Sans Mono, \
!            xft:agave regular Nerd Font Complete:size=12, \
!            xft:NotoColorEmoji:size=12

XTerm*faceName: xft:mononoki-Regular Nerd Font Complete
!            xft:agave regular Nerd Font Complete:size=12, \
!            xft:NotoColorEmoji:size=12


 
!URxvt*font: xft:DejaVu Sans Mono:pixelsize=12, \
!            xft:agave regular Nerd Font Complete:pixelsize=12, \
!            xft:NotoColorEmoji:pixelsize=12

URxvt*font: xft:DejaVu Sans Mono:pixelsize=12:antialias=true:hinting=true

Xft.rgba: rgb
!Xft.hintstyle: hintslight
!URxvt.letterSpace: -2
Xft*dpi: 96
Xft*hinting: Full
