#!/bin/sh -e

# Based on Luke Smith's compiler script
# See: https://github.com/LukeSmithxyz/voidrice

# set -x # echo commands

file=$(readlink -f "$1")
dir=${file%/*}
base="${file%.*}"
ext="${file##*.}"

cd "$dir" || exit 1

case "$ext" in
    md) 
        [ -f $base.yaml ] && yaml=$base.yaml
        pandoc --from markdown+footnotes+yaml_metadata_block+table_captions $yaml $file -o "$base".pdf 
        ;;
esac


